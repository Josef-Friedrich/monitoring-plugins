#! /bin/sh

_usage() {
	echo "usage: $(basename $0) <fsname> <warntime> <crittime>"
}

FSNAME=$1
WARNAGE=$2
CRITAGE=$3

if [ -z "$WARNAGE" ]; then
	# 1 day
	WARNAGE=86400
fi

if [ -z "$CRITAGE" ]; then
	# 3 day
	CRITAGE=259200
fi

NOW=$(date +%s)

# get all snapshots of zfs filesystem and search for newest snapshot
CREATIONDATE=$(zfs get creation -Hpr -t snapshot $FSNAME | awk 'BEGIN {max = 0} {if ($3>max) max=$3} END {print max}')

DIFF=$((NOW-CREATIONDATE))
if [ -z "$FSNAME" ] && [ "$WARNAGE" -gt "$CRITAGE" ]; then
  echo "Usage: $0 <fsname> <warntime> <crittime>"
  echo " warning time must be smaller than crittime"
  exit 3
fi

RETVAL=3 # UNKNOWN

MSG=""

if [ "$DIFF" -gt "$CRITAGE" ]; then
  RETVAL=2 # CRITICAL
  MSG="CRITICAL:"
elif [ "$DIFF" -gt "$WARNAGE" ]; then
  RETVAL=1 # WARNING
  MSG="WARNING:"
else
  RETVAL=0 # OK
  MSG="OK:"
fi

DATEFMT=$(date -d @$CREATIONDATE +"%Y-%m-%dT%H:%M:%SZ")

echo "$MSG snapshot $FSNAME created $DATEFMT" 

exit $RETVAL
